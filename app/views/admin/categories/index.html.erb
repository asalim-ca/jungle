<% @categories.each do |category| %>
  <% products = category.products.order(created_at: :desc) %>
  <section class="categories-show">

    <header class="page-header">
      <h1>
        <%= category.name %>
        <small>(<%= pluralize products.size, 'product' %>)</small>
      </h1>
    </header>

      <div class="products">
        <%= render products %>
      </div>

  </section>

<% end %>


