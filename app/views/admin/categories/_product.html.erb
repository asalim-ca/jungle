<article class="product">
  <header>
    <%= link_to product do %>
      <%= image_tag product.image.thumb, alt: product.name %>
      <h4><%= product.name %></h4>
    <% end %>
  </header>
  <p class="description">
    <%= product.description %>
  </p>
  <footer class="actions">
    <span>Price: <%= humanized_money_with_symbol product.price %></span>
    <span style="position: absolute; right:0.5em;"><%= product.quantity %> units in stock</span>

  </footer>

  <% if product.quantity == 0 %>
    <aside class="soldout">
      SOLD OUT!
    </aside>
  <% end %>
</article>